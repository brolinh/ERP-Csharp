<Window x:Class="ERP_simple.Home_page"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ERP_simple"
        mc:Ignorable="d"
        Title="Home_page" Height="430" Width="800">
    <Grid>
        <Button x:Name="Show_Product" Content="All Product" HorizontalAlignment="Left" Height="48" Margin="300,50,0,0" VerticalAlignment="Top" Width="200" FontSize="16" Click="Show_Product_Click"/>

        <Button x:Name="Add_Product" Content="Add Product" HorizontalAlignment="Left" Height="48" Margin="300,150,0,0" VerticalAlignment="Top" Width="200" FontSize="16" Click="Add_Product_Click"/>

        <Button x:Name="Update_Product" Content="Edit Product" HorizontalAlignment="Left" Height="48" Margin="300,250,0,0" VerticalAlignment="Top" Width="200" FontSize="16" Click="Update_Product_Click"/>
    </Grid>
</Window>
